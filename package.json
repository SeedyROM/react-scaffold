{
  "name": "react-scaffold",
  "version": "0.0.1",
  "description": "A create-react-starter scaffolding and boilerplate code generator.",
  "main": "src/cli.js",
  "scripts": {
    "test": "mocha './test/**/*_test.js'",
    "watch": "nodemon ./src/index.js",
    "doc": "rm -rf ./docs && jsdoc src -r -d docs --readme ./README.md"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "chai": "^4.1.2",
    "jsdoc": "^3.5.5",
    "mocha": "^5.0.0",
    "nodemon": "^1.14.12"
  },
  "dependencies": {
    "chalk": "^2.3.1",
    "clui": "^0.3.6",
    "figlet": "^1.2.0",
    "inquirer": "^5.1.0",
    "minimist": "^1.2.0"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*"
    ],
    "delay": "1000"
  },
  "nyc": {
    "exclude": [
      "docs/**/*.js"
    ]
  }
}
